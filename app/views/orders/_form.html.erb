<div class="row">
  <div class="col-md-4">
    <%= form_for(@order) do |f| %>
      <div class="panel panel-default">
        <div class="panel-heading">Order Details</div>
        <div class="panel-body">
          <% if @order.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(@order.errors.count, "error") %> prohibited this order from being saved:</h2>
              <ul>
                <% @order.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <div class="field">
            <%= f.label :name %><br>
            <%= f.text_field :name %>
          </div>
          <div class="field">
            <%= f.label :phone %><br>
            <%= f.text_field :phone %>
          </div>
          <div class="field">
            <%= f.label :address %><br>
            <%= f.text_field :address %>
          </div>
          <div class="field">
            <%= f.label :food_id %><br>
            <%= f.select :food_id, [[params[:fname], params[:fid]]] %>
          </div>
          <br/>
          <hr/>
          Delivery fee: <strong>$10.00</strong><br/>
          Total: <strong>$<%= params[:fprice].to_f + 10 %></strong>
        </div>
        <div class="panel-footer">
          <%= f.submit class: 'btn btn-primary' %>
          <%= link_to 'Cancel', foods_path, class: 'btn btn-primary' %>
        </div>
      </div>
    <% end %>
  </div>
  <div class="col-md-8">
    <img class="card-img-top" width="600px" height="450px" src="http://loremflickr.com/600/450/food"/>
  </div>
</div>
